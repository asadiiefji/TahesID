<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".Makanan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:background="@drawable/bg_home"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/textTop"
                    android:layout_width="@dimen/_280sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/btn_back"/>

                    <TextView
                        android:id="@+id/textTahes"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_45sdp"
                        android:text="MAKANAN"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_13ssp"
                        android:gravity="center"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_45sdp"
                        android:background="@drawable/btn_filter"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="@dimen/_280sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textTop">

                    <EditText
                        android:layout_width="@dimen/_280sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/bg_white_radius"
                        android:text="      cari makanan sehat"
                        android:textColor="#B1B1B1"
                        android:textSize="@dimen/_10ssp"
                        android:drawableRight="@drawable/ic_cari"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="@dimen/_280sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                    <ImageView
                        android:layout_width="@dimen/_86sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/ic_makanan"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:layout_width="@dimen/_86sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_11sdp"
                        android:background="@drawable/ic_minuman"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:layout_width="@dimen/_86sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_11sdp"
                        android:background="@drawable/ic_suplemen"
                        android:layout_gravity="center"/>
                    
                    

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/makanan1"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_180sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <ImageView
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:background="@drawable/img_makanan_a"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:text="Nice Vegetable"
                        android:gravity="center_vertical"
                        android:textColor="#323C47"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/rating1"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:gravity="center_vertical"
                            android:text="4.5"
                            android:textColor="#717171"
                            android:textSize="@dimen/_12ssp"/>

                        <TextView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:gravity="center_vertical"
                            android:text="/5.0"
                            android:textColor="#717171"
                            android:textSize="@dimen/_12ssp"/>

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/bintang" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:text="110 kkal, 201 protein, 2131 lemak, 34 serat"
                        android:textColor="#717171"
                        android:textSize="@dimen/_11ssp" />

                    <View
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="#C8C8C8" />

                    <TextView
                        android:id="@+id/harga1"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:gravity="center_vertical"
                        android:text="21.000"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="#323C47"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/btnPesan1"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/btn_pesan" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/makanan2"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/makanan1">

                <ImageView
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:background="@drawable/img_makanan_b"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:text="Mayur"
                        android:gravity="center_vertical"
                        android:textColor="#323C47"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/rating2"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:gravity="center_vertical"
                            android:text="4.5"
                            android:textColor="#717171"
                            android:textSize="@dimen/_12ssp"/>

                        <TextView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:gravity="center_vertical"
                            android:text="/5.0"
                            android:textColor="#717171"
                            android:textSize="@dimen/_12ssp"/>

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/bintang" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:text="110 kkal, 201 protein, 2131 lemak, 34 serat"
                        android:textColor="#717171"
                        android:textSize="@dimen/_11ssp" />

                    <View
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="#C8C8C8" />

                    <TextView
                        android:id="@+id/harga2"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:gravity="center_vertical"
                        android:text="17.000"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="#323C47"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/btnPesan2"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/btn_pesan" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/makanan3"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/makanan2">

                <ImageView
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:background="@drawable/img_makanan_a"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:text="Nice Vegetable"
                        android:gravity="center_vertical"
                        android:textColor="#323C47"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/rating3"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:gravity="center_vertical"
                            android:text="4.5"
                            android:textColor="#717171"
                            android:textSize="@dimen/_12ssp"/>

                        <TextView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:gravity="center_vertical"
                            android:text="/5.0"
                            android:textColor="#717171"
                            android:textSize="@dimen/_12ssp"/>

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/bintang" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:text="110 kkal, 201 protein, 2131 lemak, 34 serat"
                        android:textColor="#717171"
                        android:textSize="@dimen/_11ssp" />

                    <View
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="#C8C8C8" />

                    <TextView
                        android:id="@+id/harga3"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:gravity="center_vertical"
                        android:text="17.000"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="#323C47"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/btnPesan3"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/btn_pesan" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_60sdp"
                app:layout_constraintTop_toBottomOf="@+id/makanan3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>