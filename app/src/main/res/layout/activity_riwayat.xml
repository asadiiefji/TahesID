<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Riwayat">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/bg_home"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/textTop"
                    android:layout_width="@dimen/_280sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/btn_back"/>

                    <TextView
                        android:id="@+id/textTahes"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_45sdp"
                        android:text="RIWAYAT"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_13ssp"
                        android:gravity="center"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/makanan1"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_180sdp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <ImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/makanan"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:text="Nice Vegetable"
                        android:gravity="center_vertical"
                        android:textColor="#323C47"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tanggal"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:text="10 Oktober 2021"
                        android:textColor="#717171"
                        android:textSize="@dimen/_12ssp" />

                    <View
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="#C8C8C8" />

                    <TextView
                        android:id="@+id/harga1"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:gravity="center_vertical"
                        android:text="21.000"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="#323C47"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


<!--            <LinearLayout-->
<!--                android:layout_width="@dimen/_280sdp"-->
<!--                android:layout_height="@dimen/_60sdp"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/makanan3"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"/>-->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>