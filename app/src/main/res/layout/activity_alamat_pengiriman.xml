<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlamatPengiriman">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/textTop"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/btn_back_oren" />

                <TextView
                    android:id="@+id/textTahes"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:gravity="center"
                    android:text="Alamat Pengiriman"
                    android:textColor="#323C47"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/makanan1"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textTop">

                <ImageView
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:background="@drawable/img_makanan_a"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:text="Nice Vegetable"
                        android:gravity="center_vertical"
                        android:textColor="#FE9310"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rating1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15sdp"
                        android:gravity="center_vertical"
                        android:text="Isi"
                        android:textColor="#5A5A5A"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris eleifend odio auctor."
                        android:textColor="#323C47"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/makanan1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:gravity="center_vertical"
                    android:text="Noted"
                    android:textColor="#5A5A5A"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="#323C47"
                    android:textSize="@dimen/_11ssp" />

                <View
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="#C8C8C8" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:gravity="center_vertical"
                    android:text="Kota"
                    android:textColor="#5A5A5A"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="#323C47"
                    android:textSize="@dimen/_11ssp" />

                <View
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="#C8C8C8" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:gravity="center_vertical"
                    android:text="Kecamatan"
                    android:textColor="#5A5A5A"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="#323C47"
                    android:textSize="@dimen/_11ssp" />

                <View
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="#C8C8C8" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:gravity="center_vertical"
                    android:text="Desa"
                    android:textColor="#5A5A5A"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="#323C47"
                    android:textSize="@dimen/_11ssp" />

                <View
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="#C8C8C8" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

                <LinearLayout
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15sdp"
                        android:gravity="center_vertical"
                        android:text="RT"
                        android:textColor="#5A5A5A"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:textColor="#323C47"
                        android:textSize="@dimen/_11ssp" />

                    <View
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:background="#C8C8C8" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_20sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15sdp"
                        android:gravity="center_vertical"
                        android:text="RW"
                        android:textColor="#5A5A5A"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:textColor="#323C47"
                        android:textSize="@dimen/_11ssp" />

                    <View
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:background="#C8C8C8" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:gravity="center_vertical"
                    android:text="Detail Alamat"
                    android:textColor="#5A5A5A"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="#323C47"
                    android:textSize="@dimen/_11ssp" />

                <View
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="#C8C8C8" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:gravity="center_vertical"
                    android:text="Nomor yang bisa dihubungi"
                    android:textColor="#5A5A5A"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="#323C47"
                    android:textSize="@dimen/_11ssp" />

                <View
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="#C8C8C8" />

            </LinearLayout>

            <TextView
                android:id="@+id/textMetode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Metode Pembayaran"
                android:textColor="#323C47"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout11" />

            <ImageView
                android:id="@+id/btnCod"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_43sdp"
                android:background="@drawable/btn_cod"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textMetode" />

            <ImageView
                android:id="@+id/btnTF"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_43sdp"
                android:background="@drawable/btn_tf_no"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnCod" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>