<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PilihTarget">

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:text="Pilih Target Kamu"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_479sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btn_lebih_berat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_145sdp"
            android:background="@drawable/card_target_a"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:text="Lebih Berat"
                android:textStyle="bold"
                android:textSize="@dimen/_20ssp"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_25sdp"/>

            <TextView
                android:layout_width="@dimen/_125sdp"
                android:layout_height="wrap_content"
                android:text="30% orang memilih lebih berat"
                android:textSize="@dimen/_14ssp"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <ImageButton
                android:id="@+id/mulai_lebih_berat"
                android:layout_width="@dimen/_61sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/btn_mulai"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/progrss_berat"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="wrap_content"
                android:text="0 / 10"
                android:textSize="@dimen/_14ssp"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_ideal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_145sdp"
            android:background="@drawable/card_target_b"
            android:layout_marginTop="@dimen/_22sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:text="Ideal"
                android:textStyle="bold"
                android:textSize="@dimen/_20ssp"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_25sdp"/>

            <TextView
                android:layout_width="@dimen/_125sdp"
                android:layout_height="wrap_content"
                android:text="30% orang memilih lebih ideal"
                android:textSize="@dimen/_14ssp"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <ImageButton
                android:id="@+id/mulai_ideal"
                android:layout_width="@dimen/_61sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/btn_mulai"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/progress_ideal"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="wrap_content"
                android:text="0 / 10"
                android:textSize="@dimen/_14ssp"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_lebih_ringan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_145sdp"
            android:background="@drawable/card_target_c"
            android:layout_marginTop="@dimen/_22sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:text="Lebih Ringan"
                android:textStyle="bold"
                android:textSize="@dimen/_20ssp"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_25sdp"/>

            <TextView
                android:layout_width="@dimen/_125sdp"
                android:layout_height="wrap_content"
                android:text="30% orang memilih lebih ringan"
                android:textSize="@dimen/_14ssp"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <ImageButton
                android:id="@+id/mulai_lebih_ringan"
                android:layout_width="@dimen/_61sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/btn_mulai"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/progress_ringan"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="wrap_content"
                android:text="0 / 10"
                android:textSize="@dimen/_14ssp"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>